{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"lint": {},
		"check-types": {
			"dependsOn": [
				"@coder/types#build"
			]
		},
		"test": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"build": {
			"outputs": [
				"dist/**"
			],
			"inputs": [
				"src/**",
				"package.json",
				"tsconfig.json",
				"tsup.config.ts",
				"vite.config.ts"
			]
		},
		"watch:tsc": {
			"cache": false
		}
	}
}