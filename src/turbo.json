{
	"$schema": "https://turbo.build/schema.json",
	"extends": [
		"//"
	],
	"tasks": {
		"bundle": {
			"dependsOn": [
				"^build",
				"@coder/vscode-webview#build"
			],
			"outputs": [
				"dist/**"
			]
		},
		"vsix": {
			"dependsOn": [
				"bundle"
			],
			"inputs": [
				"dist/**"
			],
			"outputs": [
				"../bin/**"
			]
		},
		"watch:bundle": {
			"dependsOn": [
				"@coder/types#build"
			],
			"cache": false
		}
	}
}